@model WebBanSach.Models.Data.Sach

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div style="float:left; margin-right:15px; margin-left:80px;" class="span5">
        <img src="/images/@Model.AnhBia" alt="@Model.AnhBia" title="@Model.TenSach" width="250" height="360" />
    </div>
    <div style="max-width:600px; float:left;" class="span7">
        <h2>@Model.TenSach</h2>
        <h4 class="muted">Category : @Model.TheLoai.TenLoai - Author: @Model.TacGia.TenTG</h4>
        <p>Publisher : @Model.NhaXuatBan.TenNXB</p>
        <p>@Model.Mota </p>
        <hr>
        @if(Model.SoLuongTon > 0)
        {
            <p>Status: In stock</p>
        }
        else
        {
            <p>Status: Contact</p>
        }
        @if (Model.GiaBan >0)
        {
            <h3>Price - @Model.GiaBan.Value.ToString("N0") $</h3>
        }
        else
        {
            <h3>Price - Contact</h3>
        }
        <br>
        <p><a href="/Cart/AddItem/?id=@Model.MaSach&quantity=1" class="btn btn-warning btn-large">ADD TO CART</a></p>
    </div>
</div>

<hr />
<h3>Best Seller</h3>
<div class="row">
    @Html.Action("FavoriteBook", "Book")
</div>


