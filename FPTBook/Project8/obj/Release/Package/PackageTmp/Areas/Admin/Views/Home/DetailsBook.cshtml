@model WebBanSach.Models.Data.Sach

@{
    ViewBag.Title = "DetailsBook";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@Model.TenSach</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Book Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>
        <dt>
            Publisher
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
        </dd>

        <dt>
            Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TacGia.TenTG)
        </dd>

        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheLoai.TenLoai)
        </dd>

        <dt>
            Price
        </dt>

        <dd>
            <p><span>@(Model.GiaBan.HasValue ? Model.GiaBan.Value.ToString("N0") : "Liên hệ")</span> $</p>
        </dd>

        <dt>
            Quickview
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            translator
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NguoiDich)
        </dd>

        <dt>
            Picture
        </dt>

        <dd>
            <img src="/images/@Model.AnhBia" width="180" height="250" />
        </dd>

        <dt>
            Update Date
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dd>

        <dt>
            Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back", "ShowListBook") |
    @Html.ActionLink("Update", "UpdateBook", new { id = Model.MaSach })
</p>
