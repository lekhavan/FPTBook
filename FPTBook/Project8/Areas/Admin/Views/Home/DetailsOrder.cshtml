@model IEnumerable<WebBanSach.Models.Data.ChiTietDDH>

@{
    ViewBag.Title = "DetailsOrder";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Oder Detail</h2>

<table class="table">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            Book Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            Total Price 
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DonDatHang.MaDDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sach.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            <p>@String.Format("{0:0,0}", item.DonGia) $</p>
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back", "Order")
</div>
